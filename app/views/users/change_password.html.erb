<div class="container">
	<div class="row">
	    <div class="col-lg-10">
			<div class="page-header">
			    <h1>Cambiar contraseña </h1>
			</div>

			<%= form_for @user, :html=>{:class => "form-horizontal"} do |f| %>
				<% if @user.errors.any? %>
					<div id="error_explanation">
						<h2><%= pluralize(@user.errors.count, "error","errores") %></h2>
						<ul>
							<% @user.errors.full_messages.each do |msg| %>
								<li><%= msg %></li>
							<% end %>
						</ul>
					</div>
				<% end %>
				<div class="form-group has-error">
					<b class="field_required">* Campos requeridos</b>  
				</div>

				<div class="form-group">
					<label for="inputUsuario" class="col-lg-2 control-label">Usuario</label>
					<div class="col-lg-10">
						<%= f.text_field :login, :class=>"form-control", :placeholder => "Usuario", :disabled=>true  %>
					</div>
				</div>
				<div class="form-group">
					<label for="inputPassword" class="col-lg-2 control-label">Contraseña <b class="field_required">*</b></label>
					<div class="col-lg-10">
						<%= f.password_field :password, :class=>"form-control", :placeholder => "Contraseña"  %>
					</div>
				</div>
				<div class="form-group">
					<label for="inputConfirPassword" class="col-lg-2 control-label">Confirmación contraseña <b class="field_required">*</b></label>
					<div class="col-lg-10">
						<%= f.password_field :password_confirmation, :class=>"form-control", :placeholder => "Confirmación contraseña"  %>
					</div>
				</div>				
				<div class="form-group">
					<div class="col-lg-10 col-lg-offset-2">
					    <%= hidden_field_tag "action_send", 2 %>
						<%= button_tag( :class => "btn btn-primary", :id=>"button_new_user") do %>
			                <span class="glyphicon glyphicon-saved"></span> Guardar 
			            <% end %>
			            <%= link_to "/users", :class => "btn btn-default" do %>
			               <span class="glyphicon glyphicon-ban-circle"></span> Cancelar
			            <% end %>
					</div>
				</div>	
			<% end %>
		</div>
	</div>
</div>
